<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/click_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rounded_bg"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="10dp"
    tools:context=".activitys.DrinkActivity">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="음료이름"
            android:id="@+id/name"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="#666666"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:text="성분"
            android:id="@+id/maker"
            android:layout_margin="20dp"
            android:textSize="24dp"
            android:textColor="#666666"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/search_add_text_layout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:shapeAppearance="@style/ShapeAppearance.MaterialComponents.MediumComponent"
            app:boxStrokeColor="@color/cool_title"
            app:helperText="검색어를 입력해주세요."
            app:counterEnabled="true"
            app:counterMaxLength="12"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/ic_baseline_search_24"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="성분검색">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/search_add_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="12"
                    android:inputType="textWebEditText"
                    android:privateImeOptions="defaultInputmode=korean"
                    android:layout_marginBottom="5dp"
                    />
        </com.google.android.material.textfield.TextInputLayout>
        <include
            layout = "@layout/layout_button_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            />
</LinearLayout>